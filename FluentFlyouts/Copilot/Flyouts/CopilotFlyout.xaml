<?xml version="1.0" encoding="utf-8"?>
<UserControl
    x:Class="FluentFlyouts.Copilot.Flyouts.CopilotFlyout"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:FluentFlyouts.Copilot.Flyouts"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
    xmlns:icons="using:FluentIcons.WinUI"
    mc:Ignorable="d">
    <Grid Height="600" Width="400">
        <Grid.RowDefinitions>
            <RowDefinition Height="48" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>

            <Grid
        x:Name="TitleBarGrid"
        Grid.ColumnSpan="4"
        Background="Transparent" />

            <Button
        Width="32"
        Height="32"
        Margin="8,1,0,0"
        ><!--="{ThemeResource BackButtonStyle}">-->
                <Button.KeyboardAccelerators>
                    <KeyboardAccelerator Key="Back" />
                </Button.KeyboardAccelerators>
                <Button.Content>
                    <icons:SymbolIcon Symbol="ArrowLeft" />
                </Button.Content>
                <Button.Flyout>
                    <MenuFlyout Placement="BottomEdgeAlignedLeft">
                        <MenuFlyoutItem Click="UseWindowsCopilot" Text="Windows Copilot">
                            <MenuFlyoutItem.Icon>
                                <ImageIcon Source="ms-appx:///Assets/WindowsCopilot.png" />
                            </MenuFlyoutItem.Icon>
                        </MenuFlyoutItem>
                        <MenuFlyoutItem Click="UseBingCopilot" Text="Bing Copilot">
                            <MenuFlyoutItem.Icon>
                                <ImageIcon Source="ms-appx:///Assets/BingCopilot.png" />
                            </MenuFlyoutItem.Icon>
                        </MenuFlyoutItem>
                        <MenuFlyoutSeparator />
                        <MenuFlyoutItem Click="Refresh" Text="Refresh">
                            <MenuFlyoutItem.Icon>
                                <FontIcon Glyph="îœ¬" />
                            </MenuFlyoutItem.Icon>
                        </MenuFlyoutItem>
                    </MenuFlyout>
                </Button.Flyout>
            </Button>

            <TextBlock
        Grid.Column="2"
        Margin="4,-1,0,0"
        VerticalAlignment="Center"
        CharacterSpacing="-10"
        FontWeight="Normal"
        IsHitTestVisible="False"
        Text="Copilot" />
        </Grid>

        <WebView2 x:Name="WebViewControl" Grid.Row="1" DefaultBackgroundColor="Transparent"/>
    </Grid>
</UserControl>
